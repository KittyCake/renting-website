<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <h2 class="text-center">Let's go...</h2>
    <br/>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "example@email.com", autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "••••••", autocomplete: "password", class: "form-control" %>
      </div>

      <div>
        <% if devise_mapping.rememberable? -%>
            <%= f.check_box :remember_me %>Remember Me
        <% end -%>
        <br/>
        <span class="pull-left">
          <%= link_to "Forgotten your password?", new_user_password_path %>
        </span>
        <br/>
      </div>


      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <span class="pull-left">Don't have an account yet?</span>
    <%= link_to "Sign up", new_user_registration_path, class: "btn pull-right" %>

  </div>
</div>


