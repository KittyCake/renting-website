<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= render 'shared/account_tabs' %>
  </div>
  <div class="col-md-8 col-md-offset-2">
    <% @items.each do |item| %>
      <div class="col-md-4">
        <%= render 'shared/item_card', item_name: "#{item.item_name}", description: "#{item.description}", price_daily: "#{item.price_daily}", created_at: "#{item.created_at}", item: "#{item}" %>
        <div class="btn btn-warning">
        <%= link_to 'Edit', edit_item_path(item) %>
        </div>
        <div class="btn btn-danger">
          <%= link_to 'Delete', item_path(item), method: :delete %>
        </div>

      </div>
    <% end %>
  </div>
</div>
